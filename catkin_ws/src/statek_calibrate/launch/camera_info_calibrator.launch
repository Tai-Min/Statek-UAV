<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="statek_name" default="$(eval open(find('statek_config') + '/name').read())"/>
    <arg name="square_size" default="0.0252"/>

    <!-- Launch calibration tool -->
    <node name="camera_calibration_node" pkg="camera_calibration" type="cameracalibrator.py" output="screen" respawn="false" args="--approximate 0.1 --size 9x6 --square $(arg square_size) left:=$(arg statek_name)/stereo/left/image_raw right:=$(arg statek_name)/stereo/right/image_raw left_camera:=$(arg statek_name)/stereo/left/ right_camera:=$(arg statek_name)/stereo/right/" />

</launch>
