<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="statek_name" default="$(eval open(find('statek_config') + '/name').read())"/>

    <!-- Launch transform publishers -->
    <include file="$(find statek_hw)/launch/tf.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

    <!-- Launch hardware nodes -->
    <include file="$(find statek_hw)/launch/hw.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

    <!-- Launch helper nodes -->
    <include file="$(find statek_hw)/launch/helpers.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

</launch>
