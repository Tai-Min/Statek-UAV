<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="statek_name" default="$(eval open(find('statek_config') + '/name').read())"/>

    <!-- Launch lidar -->
    <include file="$(find statek_hw)/launch/hw/lidar.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

    <!-- Launch GPS driver -->
    <include file="$(find statek_hw)/launch/hw/gps.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

    <!-- Launch camera processing nodes  -->
    <include file="$(find statek_hw)/launch/hw/camera.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

    <!-- Launch real time hardware -->
    <include file="$(find statek_hw)/launch/hw/real_time.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

</launch>
