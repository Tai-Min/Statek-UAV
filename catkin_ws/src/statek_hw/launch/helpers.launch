<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="statek_name" default="$(eval open(find('statek_config') + '/name').read())"/>

    <!-- Launch lidar to img converter -->
    <include file="$(find statek_hw)/launch/helpers/laser_to_img.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

    <!-- Launch camera processing nodes  -->
    <include file="$(find statek_hw)/launch/helpers/camera_processing.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

    <!-- Launch twist to differential command converter -->
    <include file="$(find statek_hw)/launch/helpers/twist_to_differential.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

    <!-- Launch differential to twist command feedback -->
    <include file="$(find statek_hw)/launch/helpers/differential_to_twist_feedback.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

</launch>
