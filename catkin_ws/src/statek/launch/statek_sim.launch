<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="statek_name" default="$(eval open(find('statek_config') + '/name').read())"/>

    <!-- Launch hardware nodes -->
    <include file="$(find statek_hw)/launch/tf.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

    <include file="$(find statek_hw)/launch/helpers.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

    <!-- Launch mapping stack -->
    <include file="$(find statek_map)/launch/mappers.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

    <!-- Launch planning stack -->
    <include file="$(find statek_plan)/launch/short_term_planner.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

    <!-- Launch navigation stack -->
    <include file="$(find statek_nav)/launch/nav.launch">
        <arg name="statek_name" value="$(arg statek_name)"/>
    </include>

</launch>
