<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <arg name="statek_name" default="$(eval open(find('statek_config') + '/name').read())"/>
    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0"/>
    <arg name="R" default="0"/>
    <arg name="P" default="0"/>
    <arg name="Y" default="0"/>

    <!-- Spawn Statek UAV with given name or default one -->
    <param name="$(arg statek_name)/robot_description" command="$(find xacro)/xacro $(find statek_config)/urdf/robot_description.urdf"/>

    <node name="spawn_statek" pkg="gazebo_ros" type="spawn_model" args="-param $(arg statek_name)/robot_description -urdf -model $(arg statek_name) -x $(arg x) -y $(arg y) -z $(arg z) -R $(arg R) -P $(arg P) -Y $(arg Y)"/>

</launch>
