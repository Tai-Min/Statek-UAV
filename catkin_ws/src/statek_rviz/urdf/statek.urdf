<robot name="statek"
    xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:arg name="statek_name" default="statek"/>

    <link name="$(arg statek_name)_base_link">
        <visual>
            <geometry>
                <mesh filename="file://$(find statek_rviz)/urdf/chassis.dae"/>
            </geometry>
            <origin rpy="0 0 1.5707"/>
        </visual>
    </link>
</robot>